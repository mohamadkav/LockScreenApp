<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/yellow"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Lock first!"
        android:id="@+id/deviceAdminButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:onClick="handleAdminButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Pattern"
        android:id="@+id/setPattern"
        android:layout_below="@+id/deviceAdminButton"
        android:layout_marginTop="116dp"
        android:onClick="setPattern"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Pattern to Confirm"
        android:id="@+id/confirmButton"
        android:layout_below="@+id/setPattern"
        android:layout_alignRight="@+id/deviceAdminButton"
        android:layout_alignEnd="@+id/deviceAdminButton"
        android:onClick="confirmPattern"/>

</RelativeLayout>